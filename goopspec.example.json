{
  "_comment": "GoopSpec configuration example. Contains only GoopSpecConfig fields plus _comment helpers.",
  "projectName": "my-awesome-app",
  "enforcement": "warn",
  "_enforcement_comment": "assist = gentle guidance, warn = highlight issues, strict = enforce gates and constraints.",
  "adlEnabled": true,
  "defaultModel": "anthropic/claude-sonnet-4-5",
  "agents": {
    "goop-explorer": {
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.3
    },
    "goop-librarian": {
      "model": "openai/gpt-5.2",
      "temperature": 0.2
    },
    "goop-researcher": {
      "model": "openai/gpt-5.2",
      "temperature": 0.3
    },
    "goop-tester": {
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.2
    },
    "goop-writer": {
      "model": "google/antigravity-gemini-3-pro-high",
      "temperature": 0.3
    },
    "goop-debugger": {
      "model": "openai/gpt-5.3-codex",
      "temperature": 0.2
    },
    "goop-designer": {
      "model": "anthropic/claude-opus-4-6",
      "temperature": 0.4
    },
    "goop-executor": {
      "model": "openai/gpt-5.3-codex",
      "temperature": 0.2
    },
    "goop-orchestrator": {
      "model": "anthropic/claude-opus-4-6",
      "temperature": 0.1
    },
    "goop-planner": {
      "model": "openai/gpt-5.3-codex",
      "temperature": 0.2
    },
    "goop-verifier": {
      "model": "openai/gpt-5.3-codex",
      "temperature": 0.1
    }
  },
  "mcp": {
    "context7": true,
    "exa": true,
    "searchProvider": "exa",
    "playwright": true,
    "memory": true,
    "github": true,
    "sqlite": true
  },
  "orchestrator": {
    "enableAsDefault": false,
    "model": "anthropic/claude-opus-4-6",
    "thinkingBudget": 32000,
    "phaseGates": "ask",
    "waveExecution": "sequential"
  },
  "memory": {
    "enabled": true,
    "workerPort": 37777,
    "capture": {
      "enabled": true,
      "captureToolUse": true,
      "captureMessages": true,
      "capturePhaseChanges": true,
      "skipTools": [
        "bash"
      ],
      "minImportanceThreshold": 0.4
    },
    "injection": {
      "enabled": true,
      "budgetTokens": 1400,
      "format": "structured",
      "priorityTypes": [
        "decision",
        "observation",
        "note"
      ]
    },
    "privacy": {
      "enabled": true,
      "stripPatterns": [
        "(?:api[_-]?key|token|secret|password)\\s*[:=]\\s*[\\\"'][^\\\"'\\n]+[\\\"']",
        "sk-[a-zA-Z0-9]{20,}"
      ],
      "privateTagEnabled": true,
      "retentionDays": 90,
      "maxMemories": 5000
    },
    "embeddings": {
      "provider": "local",
      "model": "all-MiniLM-L6-v2",
      "dimensions": 384
    }
  }
}
