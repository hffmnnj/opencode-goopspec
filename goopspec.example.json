{
  "$schema": "./goopspec.schema.json",
  "_comment": "GoopSpec Configuration - Core settings first, followed by documentation-only examples.",

  "projectName": "my-awesome-app",
  "enforcement": "warn",
  "constitution": true,
  "adlEnabled": true,
  "defaultModel": "anthropic/claude-sonnet-4-5",

  "agents": {
    "_comment": "Core GoopSpecConfig agents map: each agent key maps to { model?, temperature? }.",
    "goop-debugger": {
      "model": "openai/gpt-5.3-codex",
      "temperature": 0.2
    },
    "goop-designer": {
      "model": "anthropic/claude-opus-4-6",
      "temperature": 0.4
    },
    "goop-executor": {
      "model": "openai/gpt-5.3-codex",
      "temperature": 0.2
    },
    "goop-explorer": {
      "model": "google/antigravity-gemini-3-flash",
      "temperature": 0.3
    },
    "goop-librarian": {
      "model": "openai/gpt-5.2",
      "temperature": 0.2
    },
    "goop-orchestrator": {
      "model": "anthropic/claude-opus-4-6",
      "temperature": 0.1
    },
    "goop-planner": {
      "model": "anthropic/claude-opus-4-6",
      "temperature": 0.2
    },
    "goop-researcher": {
      "model": "openai/gpt-5.2",
      "temperature": 0.3
    },
    "goop-tester": {
      "model": "anthropic/claude-sonnet-4-5",
      "temperature": 0.2
    },
    "goop-verifier": {
      "model": "openai/gpt-5.3-codex",
      "temperature": 0.1
    },
    "goop-writer": {
      "model": "google/antigravity-gemini-3-pro-high",
      "temperature": 0.3
    }
  },

  "mcp": {
    "_comment": "Core MCP integrations from McpConfig.",
    "context7": true,
    "exa": true
  },

  "orchestrator": {
    "_comment": "Core orchestrator behavior from OrchestratorConfig.",
    "enableAsDefault": false,
    "model": "anthropic/claude-opus-4-6",
    "thinkingBudget": 32000,
    "phaseGates": "ask",
    "waveExecution": "sequential"
  },

  "memory": {
    "_comment": "Core memory settings from MemorySystemConfig and sub-configs.",
    "enabled": true,
    "workerPort": 37777,
    "capture": {
      "enabled": true,
      "captureToolUse": true,
      "captureMessages": true,
      "capturePhaseChanges": true,
      "skipTools": ["bash"],
      "minImportanceThreshold": 0.4
    },
    "injection": {
      "enabled": true,
      "budgetTokens": 1400,
      "format": "structured",
      "priorityTypes": ["decision", "observation", "note"]
    },
    "privacy": {
      "enabled": true,
      "stripPatterns": [
        "(?:api[_-]?key|token|secret|password)\\s*[:=]\\s*[\\\"'][^\\\"'\\n]+[\\\"']",
        "sk-[a-zA-Z0-9]{20,}"
      ],
      "privateTagEnabled": true,
      "retentionDays": 90,
      "maxMemories": 5000
    },
    "embeddings": {
      "provider": "local",
      "model": "all-MiniLM-L6-v2",
      "dimensions": 384
    }
  },

  "_non_core_comment": "The sections below are examples/documentation only and are not part of the core GoopSpecConfig type.",
  "version": "0.1.6",
  "project_name": "my-awesome-app",

  "_legacy_models_comment": "Legacy example format (models) retained for documentation/backward-reference only; use the core agents section above.",
  "models": {
    "_comment": "Legacy model assignments format.",
    "planner": "anthropic/claude-opus-4-6",
    "executor": "anthropic/claude-sonnet-4-5",
    "verifier": "openai/gpt-5.3-codex",
    "explorer": "google/antigravity-gemini-3-flash",
    "designer": "kimi-for-coding/k2p5",
    "writer": "google/antigravity-gemini-3-pro-high",
    "tester": "anthropic/claude-sonnet-4-5",
    "overrides": {
      "_comment": "Override models for specific scenarios.",
      "security_review": "openai/gpt-5.3-codex",
      "performance_audit": "anthropic/claude-opus-4-6",
      "refactor": "anthropic/claude-sonnet-4-5",
      "quick_fix": "anthropic/claude-sonnet-4-5",
      "large_project": "anthropic/claude-opus-4-6"
    }
  },

  "_profiles_comment": "Example workflow profiles - not part of core GoopSpecConfig.",
  "profiles": {
    "_comment": "Pre-configured workflow profiles for common scenarios.",

    "quick_fix": {
      "_comment": "Minimal overhead for small fixes.",
      "max_plans": 1,
      "parallel_execution": false,
      "enforced_task_continuation": false,
      "auto_commit": true,
      "verification_level": "basic",
      "required_skills": ["goop-core"]
    },

    "large_project": {
      "_comment": "Full workflow for complex multi-phase projects.",
      "max_plans": 10,
      "parallel_execution": true,
      "parallel_max_agents": 4,
      "enforced_task_continuation": true,
      "auto_commit": false,
      "verification_level": "comprehensive",
      "enable_research": true,
      "enable_discovery": true,
      "workflow_stages": ["constitution", "specification", "clarify", "plan", "tasks", "implement"],
      "required_skills": ["goop-core", "architecture-design"]
    },

    "refactor": {
      "_comment": "Careful refactoring with test preservation.",
      "max_plans": 5,
      "parallel_execution": false,
      "enforced_task_continuation": true,
      "auto_commit": false,
      "verification_level": "strict",
      "require_tests": true,
      "preserve_behavior": true,
      "required_skills": ["goop-core", "refactoring"]
    },

    "security": {
      "_comment": "Security-focused mode with audit logging.",
      "max_plans": 3,
      "parallel_execution": false,
      "enforced_task_continuation": true,
      "auto_commit": false,
      "verification_level": "exhaustive",
      "enable_audit_log": true,
      "require_security_review": true,
      "required_skills": ["goop-core", "security-audit"]
    },

    "yolo": {
      "_comment": "Fully autonomous mode - use with caution.",
      "auto_approve": true,
      "skip_gates": true,
      "max_prompts": 0,
      "enforced_task_continuation": true,
      "verification_level": "basic"
    }
  },

  "_workflow_comment": "Example workflow settings - not part of core GoopSpecConfig.",
  "workflow": {
    "_comment": "Core workflow settings (documentation example).",
    "mode": "interactive",

    "gates": {
      "_comment": "Confirmation gates for important actions.",
      "confirm_destructive": true,
      "confirm_external_services": true,
      "confirm_architectural_changes": true,
      "commit_each_task": true
    },

    "parallelization": {
      "_comment": "Parallel execution settings for wave-based execution.",
      "enabled": true,
      "plan_level": true,
      "task_level": false,
      "max_concurrent_agents": 4,
      "skip_checkpoints": true
    },

    "research": {
      "_comment": "Research tool integration settings.",
      "enabled": true,
      "auto_discovery": true,
      "context7_first": true,
      "exa_for_trends": true,
      "depth": "standard"
    },

    "git": {
      "_comment": "Git workflow settings.",
      "commit_docs": true,
      "atomic_commits": true,
      "commit_message_style": "conventional",
      "auto_stage": false
    }
  },

  "_enforced_task_continuation_comment": "Documentation example only - not part of core GoopSpecConfig.",
  "enforced_task_continuation": {
    "_comment": "Relentless execution - keeps agent working until complete.",
    "enabled": true,
    "max_prompts": 3,
    "prompt_interval": 5,
    "escalation_message": "Tasks remain incomplete. Continue working.",
    "final_message": "Maximum prompts reached. Manual intervention required."
  },

  "_spec_enforcement_comment": "Documentation example only - use top-level enforcement for core config.",
  "spec_enforcement": {
    "_comment": "Controls how strictly the agent follows the spec.",
    "enabled": true,
    "strict_mode": false,
    "warn_on_deviation": true,
    "block_outside_scope": false
  },

  "_checkpoints_comment": "Documentation example only - not part of core GoopSpecConfig.",
  "checkpoints": {
    "_comment": "Checkpoint system for session recovery and state tracking.",
    "enabled": true,
    "auto_save": true,
    "auto_save_interval": 10,
    "max_checkpoints": 20,
    "compress_old": true
  },

  "_tools_comment": "Documentation example only - not part of core GoopSpecConfig.",
  "tools": {
    "_comment": "External tool configurations.",

    "playwright": {
      "_comment": "Web testing with Playwright.",
      "enabled": true,
      "headless": false,
      "viewport": { "width": 1280, "height": 720 },
      "timeout": 30000
    },

    "context7": {
      "_comment": "Documentation lookup via Context7.",
      "enabled": true,
      "prefer_official_docs": true,
      "max_queries_per_session": 10
    },

    "exa": {
      "_comment": "Web search via Exa.",
      "enabled": true,
      "num_results": 8,
      "type": "auto",
      "livecrawl": "fallback"
    }
  },

  "_output_comment": "Documentation example only - not part of core GoopSpecConfig.",
  "output": {
    "_comment": "Output and display settings.",
    "ascii_art": true,
    "verbose_logging": true,
    "show_token_usage": true,
    "show_model_selection": true,
    "core_value": "Build reliable software through structured planning"
  },

  "_boundaries_comment": "Documentation example only - not part of core GoopSpecConfig.",
  "boundaries": {
    "_comment": "Three-tier boundary system: Always/Ask/Never.",

    "always": [
      "Run tests before commits",
      "Run linter before commits",
      "Update ADL.md with architectural decisions",
      "Follow project conventions from CONSTITUTION.md"
    ],

    "ask_first": [
      "Modify database schemas",
      "Add new dependencies",
      "Change authentication mechanisms",
      "Delete files",
      "Modify configuration files",
      "Make architectural changes"
    ],

    "never": [
      "Commit secrets or API keys",
      "Ignore test failures",
      "Skip security checks in security mode",
      "Modify files outside spec scope (in strict mode)",
      "Use deprecated APIs without verification"
    ]
  },

  "_advanced_comment": "Documentation example only - not part of core GoopSpecConfig.",
  "advanced": {
    "_comment": "Advanced features and experimental settings.",

    "self_healing": true,
    "agent_resurrection": true,
    "track_deviations": true,
    "deviation_threshold": "normal",

    "context_management": {
      "_comment": "Context window management for long sessions.",
      "max_context_usage_percent": 70,
      "auto_summarize": true,
      "fresh_context_threshold": 50
    },

    "deviation_rules": {
      "_comment": "Four-rule deviation system for handling unexpected issues.",
      "enabled": true,
      "strictness": "normal",
      "autoFix": ["bug", "critical", "blocker"],
      "askFirst": ["architecture"]
    }
  }
}
